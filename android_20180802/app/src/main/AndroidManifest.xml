<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobitant.bestfood">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.example.spacup.MyApp"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIszaSyAeaZpA3NSarP5ABOwoF9-zwvb4YL1w-8I" />
            <!-- 키 변경 필요 -->

        <activity
            android:name="com.example.spacup.PermissionActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.spacup.IndexActivity" />
        <activity android:name="com.example.spacup.MainActivity" />


        <activity android:name="com.example.spacup.SpacupInfoActivity" />
        <activity android:name="com.example.spacup.SpacupRegisterActivity" />

        <activity android:name="com.example.spacup.ProfileActivity" />
        <activity android:name="com.example.spacup.ProfileIconActivity" />

        <activity
            android:name="com.example.spacup.timetable.activities.HomeworksActivity"
            android:label="@string/homeworks"
            android:parentActivityName="com.example.spacup.timetable.activities.MainActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.spacup.timetable.activities.HomeworksActivity" />

        <activity
            android:name="com.example.spacup.timetable.activities.NotesActivity"
            android:label="Notes"
            android:parentActivityName="com.example.spacup.timetable.activities.MainActivity" />
        <activity
            android:name="com.example.spacup.timetable.activities.NoteInfoActivity"
            android:label="Notes"
            android:parentActivityName="com.example.spacup.timetable.activities.NotesActivity" />
        <activity
            android:name="com.example.spacup.timetable.activities.TeachersActivity"
            android:label="Teachers"
            android:parentActivityName="com.example.spacup.timetable.activities.MainActivity" />
        <activity
            android:name="com.example.spacup.timetable.activities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="com.example.spacup.timetable.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.spacup.timetable.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.example.spacup.timetable.activities.ExamsActivity"
            android:label="Exams"
            android:parentActivityName="com.example.spacup.timetable.activities.MainActivity" />

        <receiver
            android:name="com.example.spacup.timetable.utils.DailyReceiver"
            android:enabled="true" />

        <receiver
            android:name="com.example.spacup.timetable.utils.WakeUpAlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>